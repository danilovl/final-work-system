{
    "compilerOptions": {
        "target": "es2023",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@playwright-test/*": ["tests/Playwright/*"],
            "@cypress-test/*": ["tests/Cypress/*"]
        },
        "types": [
            "node",
            "playwright",
            "cypress",
        ]
    },
    "include": [
        "tests",
        "playwright.config.ts"
    ]
}
