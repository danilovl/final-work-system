{
    "compilerOptions": {
        "target": "es2023",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@playwright-test/*": ["tests/Playwright/*"],
            "@cypress-test/*": ["tests/Cypress/*"]
        },
        "types": [
            "node",
            "playwright",
            "cypress",
        ],
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "assets/vue",
        "tests",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "public/build"
    ]
}
