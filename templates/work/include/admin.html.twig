{% if work.isSupervisor(app.user) %}
    <div class="row">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    {{ 'app.text.admin_panel' | trans() }}
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li id="toggle-admin-panel">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-down"></i>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content" style="display: none;">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <a class="btn btn-app"
                       id="work-edit"
                       href="{{ path('work_edit', { 'id': work.id | hashids_encode }) }}"
                       data-toggle="modal"
                       data-target="#modalWindow">
                        <i class="fa fa-edit"></i>
                        {{ 'app.form.action.edit' | trans() }}
                    </a>
                    <a class="btn btn-app"
                       id="work-author-edit"
                       href="{{ path('work_edit_author', { 'id': work.id | hashids_encode }) }}"
                       data-toggle="modal"
                       data-target="#modalWindow">
                        <i class="fa fa-edit"></i>
                        {{ 'app.form.action.edit_author' | trans() }}
                    </a>
                    <a class="btn btn-app"
                       data-toggle="modal"
                       data-target="#work-delete-modal-{{ work.id | hashids_encode }}">
                        <i class="fa fa-trash-o"></i>
                        {{ 'app.form.action.delete' | trans() }}
                    </a>
                    <div class="modal fade bs-example-modal-sm"
                         tabindex="-1"
                         role="dialog"
                         id="work-delete-modal-{{ work.id | hashids_encode }}"
                         aria-hidden="true">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button"
                                            class="close"
                                            data-dismiss="modal"
                                            aria-label="Close">
                                        <span aria-hidden="true">Ã—</span>
                                    </button>
                                    <h4 class="modal-title">
                                        {{ 'app.text.deleting' | trans() }}
                                        | {{ work.title }}
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    <h4>
                                        {{ 'app.text.are_you_sure_delete' | trans() }}
                                        ?
                                    </h4>
                                </div>
                                <div class="modal-footer">
                                    <button type="button"
                                            class="btn btn-default"
                                            data-dismiss="modal">
                                        {{ 'app.form.action.close' | trans() }}
                                    </button>

                                    {{ form_start(deleteForm, {'attr': {'class': 'delete-form-button'}}) }}
                                    <button class="btn btn-danger">
                                        <i class="fa fa-trash-o"></i>
                                        {{ 'app.form.action.delete' | trans() }}
                                    </button>
                                    {{ form_end(deleteForm) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}