<!-- Global site tag (gtag.js) - Google Analytics -->
{% if parameter_get_string('google_analytics_code') is not empty  %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ parameter_get_string('google_analytics_code') }}"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '{{ parameter_get_string('google_analytics_code') }}');
</script>
{% endif %}