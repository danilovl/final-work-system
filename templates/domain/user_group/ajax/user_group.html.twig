<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">Ã—</span>
    </button>
    <h4 class="modal-title">
        {{ title }}
    </h4>
</div>

<div class="row ajax">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">

                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="item form-group">
                            {{ form_label(form.name,  'app.form.label.name' , {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-3">
                                <button class="btn btn-success"
                                        id="user_group_action">
                                    <i class="fa fa-refresh fa-spin hide"></i>
                                    {{ buttonActionTitle }}
                                </button>
                                <button class="btn btn-primary"
                                        id="user_group_action_close">
                                    <i class="fa fa-refresh fa-spin hide"></i>
                                    {{ buttonActionCloseTitle }}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(() => {
        createEditContentAjax('#user_group_action');
        createEditContentAjax('#user_group_action_close', true);
    });
</script>
