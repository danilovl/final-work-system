{% extends 'layout.html.twig' %}

{% block content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="clearfix"></div>

            {% if eventAddresses is defined %}
                <div class="row">
                    <div class="x_panel">
                        <div class="x_title" style="height: auto;">
                            <h2>
                                {{ 'app.page.appointment_address_list' | trans() }}
                            </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li class="dropdown">
                                    <a href="#"
                                       class="dropdown-toggle"
                                       data-toggle="dropdown"
                                       role="button"
                                       aria-expanded="false">
                                        <i class="fa fa-wrench"></i>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="{{ path('event_address_create') }}"
                                               data-toggle="modal"
                                               data-target="#modalWindow">
                                                <i class="fa fa-edit"></i>
                                                {{ 'app.form.action.create' | trans() }}
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            {% if eventAddresses is not empty %}
                                <table class="table table-striped projects">
                                    <thead>
                                    <tr>
                                        <th>
                                            {{ 'app.text.name' | trans() }}
                                        </th>
                                        <th>
                                            {{ 'app.text.street' | trans() }}
                                        </th>
                                        <th>
                                            {{ 'app.text.skype' | trans() }}</th>
                                        <th style="width: 20%">
                                            {{ 'app.text.options' | trans() }}
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for  eventAddress in eventAddresses %}
                                        <tr id="appointment-address-{{ eventAddress.id | hashids_encode }}"
                                            data-delete-row="appointment-address-{{ eventAddress.id | hashids_encode }}">
                                            <td>
                                                <a target="_blank"
                                                   href="{{ path('event_address_detail', { 'id': eventAddress.id | hashids_encode}) }}">
                                                    {{ eventAddress.name }}
                                                </a>
                                            </td>
                                            <td>
                                                {{ eventAddress.street }}
                                            </td>
                                            <td>
                                                <input class="js-switch"
                                                        {% if  eventAddress.skype %} checked {% endif %}
                                                       data-switchery="false"
                                                       disabled="disabled"
                                                       title=""
                                                       type="checkbox">
                                            </td>
                                            <td>
                                                <a class="btn btn-primary btn-xs"
                                                   href="{{ path('event_address_detail', { 'id': eventAddress.id | hashids_encode }) }}"
                                                   target="_blank">
                                                    <i class="fa fa-folder"></i>
                                                    {{ 'app.form.action.show_detail' | trans() }}
                                                </a>
                                                <a data-toggle="modal"
                                                   data-target="#modalWindow"
                                                   class="btn btn-warning btn-xs"
                                                   href="{{ path('event_address_edit', { 'id': eventAddress.id | hashids_encode }) }}">
                                                    <i class="fa fa-pencil"></i>
                                                    {{ 'app.form.action.edit' | trans() }}
                                                </a>
                                                <a data-toggle="modal"
                                                   data-target="#appointment-address-delete-modal-{{ eventAddress.id | hashids_encode }}"
                                                   class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash-o"></i>
                                                    {{ 'app.form.action.delete' | trans() }}
                                                </a>
                                                <div class="modal fade bs-example-modal-sm"
                                                     tabindex="-1"
                                                     role="dialog"
                                                     id="appointment-address-delete-modal-{{ eventAddress.id | hashids_encode }}"
                                                     aria-hidden="true">
                                                    <div class="modal-dialog modal-sm">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button"
                                                                        class="close"
                                                                        data-dismiss="modal"
                                                                        aria-label="Close">
                                                                    <span aria-hidden="true">Ã—</span>
                                                                </button>
                                                                <h4 class="modal-title">
                                                                    {{ 'app.text.deleting' | trans() }}
                                                                    | {{ eventAddress.name }}
                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h4>{{ 'app.text.are_you_sure_delete' | trans() }}
                                                                    ?</h4>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button"
                                                                        class="btn btn-default"
                                                                        data-dismiss="modal">
                                                                    {{ 'app.form.action.close' | trans() }}
                                                                </button>
                                                                <button
                                                                        data-delete-target-url="{{ path('event_address_delete_ajax', { 'id': eventAddress.id | hashids_encode }) }}"
                                                                        data-delete-target-row="appointment-address-{{ eventAddress.id | hashids_encode }}"
                                                                        type="button"
                                                                        class="btn btn-danger delete-element">
                                                                    <i class="fa fa-refresh fa-spin hide"></i>
                                                                    <i class="fa fa-trash-o"></i>
                                                                    {{ 'app.form.action.delete' | trans() }}
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            {% else %}
                                {{ 'app.text.no_result' | trans() }}
                            {% endif %}

                        </div>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(eventAddresses) }}
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_key }}&language={{ app.request.locale }}&region=CS">
    </script>
{% endblock %}



