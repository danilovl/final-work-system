{% trans_default_domain 'FOSUserBundle' %}

<div>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">

                {% if error %}
                    <div>{{ error.messageKey | trans(error.messageData, 'security') }}</div>
                    <br/>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="POST">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <h1>{{ 'finalwork.form.label.login_form' | trans({}, 'messages') }}</h1>
                    <div>
                        <input type="text"
                               class="form-control"
                               placeholder="{{ 'security.login.username' | trans }}"
                               id="username"
                               name="_username"
                               value="{{ last_username }}"
                               required="required"/>
                    </div>
                    <div>
                        <input type="password"
                               class="form-control"
                               placeholder="{{ 'security.login.password' | trans }}"
                               id="password"
                               name="_password"
                               required="required"/>
                    </div>
                    <div>
                        <input class="btn btn-default submit"
                               type="submit"
                               id="_submit"
                               name="_submit"
                               value="{{ 'security.login.submit' | trans }}"/>

                        <a class="btn btn-default submit"
                           href="{{ path('fos_user_resetting_request') }}">
                            {{ 'resetting.request.submit' | trans() }}
                        </a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <div>
                            <h1>
                                <i class="fa fa-book"></i>{{ 'finalwork.system_name' | trans({}, 'messages') }}
                            </h1>
                            <p>Â©{{ "now"|date("Y") }}</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
