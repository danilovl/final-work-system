{% stylesheets filter='cssrewrite,scssphp'
    'vendor/switchery/dist/switchery.min.css'
    'vendor/select2/dist/css/select2.min.css' %}
    <link rel="stylesheet" href="/compiled{{ asset_url }}"/>
{% endstylesheets %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>
<div class="row ajax">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">

                        {{ form_start(form, {'action': path('version_edit_ajax', { 'id_work': work.id, 'id_media': media.id }), 'method': 'POST','attr': {'class': 'form-horizontal'}}) }}

                        <div class="item form-group">
                            {{ form_label(form.name,  'finalwork.form.label.name' , {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>

                        <div class="item form-group">
                            {{ form_label(form.description,  'finalwork.form.label.description' , {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>

                        {% if  form.category is defined %}
                            <div class="item form-group">
                                {{ form_label(form.category, 'finalwork.form.label.category', {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                                <div class="col-md-10 col-sm-10 col-xs-12">
                                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        {% endif %}

                        {% if  form.active is defined %}
                            <div class="item form-group">
                                {{ form_label(form.active, 'finalwork.form.label.active', {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                                <div class="col-md-10 col-sm-10 col-xs-12">
                                    {{ form_widget(form.active, {'attr': {'class': 'form-control js-switch'}}) }}
                                </div>
                            </div>
                        {% endif %}

                        <div class="item form-group">
                            {{ form_label(form.uploadMedia, 'finalwork.form.label.file', {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.uploadMedia, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-2">
                                <button class="btn btn-success"
                                        id="media_edit">
                                    <i class="fa fa-refresh fa-spin hide"></i>
                                    {{ 'finalwork.form.action.edit' | trans() }}
                                </button>
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% javascripts filter='jsqueeze'
    'vendor/switchery/dist/switchery.min.js'
    'vendor/select2/dist/js/select2.full.min.js' %}
    <script src="/compiled{{ asset_url }}"></script>
{% endjavascripts %}

<script src="{{ asset('vendor/tinymce/tinymce.min.js') }}"></script>
<script>
    var locale = '{{ app.request.locale }}';

    $(document).ready(function () {
        initTinymce(locale);

        $("#media_type").select2({width: '100%'});
        $("#media_category").select2({width: '100%'});

        initJsSwitch('.ajax .js-switch');
        createEditContentAjax('#media_edit');
    });
</script>
