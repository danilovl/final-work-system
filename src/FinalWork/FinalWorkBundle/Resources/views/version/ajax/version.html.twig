{% stylesheets filter='cssrewrite,scssphp'
    'vendor/switchery/dist/switchery.min.css' %}
    <link rel="stylesheet" href="/compiled{{ asset_url }}"/>
{% endstylesheets %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">Ã—</span>
    </button>
    <h4 class="modal-title">
        {{ title }} - {{ work.title }}
    </h4>
</div>
<div class="row ajax">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">

                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="item form-group">
                            {{ form_label(form.name,  'finalwork.form.label.name' , {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="item form-group">
                            {{ form_label(form.description,  'finalwork.form.label.description' , {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="item form-group">
                            {{ form_label(form.uploadMedia, 'finalwork.form.label.file', {'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'}}) }}
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                {{ form_widget(form.uploadMedia, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-2">
                                <button class="btn btn-success"
                                        id="media_action">
                                    <i class="fa fa-refresh fa-spin hide"></i>
                                    {{ buttonActionTitle }}
                                </button>
                                <button class="btn btn-primary"
                                        id="media_action_close">
                                    <i class="fa fa-refresh fa-spin hide"></i>
                                    {{ buttonActionCloseTitle }}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% javascripts filter='jsqueeze'
    'vendor/switchery/dist/switchery.min.js' %}
    <script src="/compiled{{ asset_url }}"></script>
{% endjavascripts %}

<script src="{{ asset('vendor/tinymce/tinymce.min.js') }}"></script>
<script>
    var locale = '{{ app.request.locale }}';

    $(document).ready(function () {
        initTinymce(locale);
        initJsSwitch('.ajax .js-switch');
        createEditContentFileAjax('#media_action');
        createEditContentFileAjax('#media_action_close', true);
    });
</script>
