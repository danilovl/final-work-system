{% extends 'FinalWorkBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite,scssphp'
        'vendor/switchery/dist/switchery.min.css' %}
        <link rel="stylesheet" href="/compiled{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="clearfix"></div>

            {% if workCategories is defined %}
                <div class="row">
                    <div class="x_panel">
                        <div class="x_title" style="height: auto;">
                            <h2>
                                {{ 'finalwork.text.work_category_list' | trans() }}
                            </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li class="dropdown">
                                    <a href="#"
                                       class="dropdown-toggle"
                                       data-toggle="dropdown"
                                       role="button"
                                       aria-expanded="false">
                                        <i class="fa fa-wrench"></i>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="{{ path('work_category_create') }}"
                                               data-toggle="modal"
                                               data-target="#modalWindow">
                                                <i class="fa fa-edit"></i>
                                                {{ 'finalwork.form.action.create' | trans() }}
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            {% if workCategories is not empty %}
                                {% set directionParam = workCategories.getPaginatorOption('sortDirectionParameterName') %}
                                {% set params = workCategories.getParams() %}
                                {% set direction = params[directionParam] is defined ? params[directionParam] : null %}

                                <table class="table table-striped projects">
                                    <thead>
                                    <tr>
                                        <th{% if workCategories.isSorted('work_category.name') %} class="fa fa-sort-{{ direction }}"{% endif %}>
                                            {{ knp_pagination_sortable(workCategories, 'finalwork.text.name' | trans(), 'work_category.name') }}
                                        </th>
                                        <th>
                                            {{ 'finalwork.text.work' | trans() }}
                                        </th>
                                        <th{% if workCategories.isSorted('work_category.sorting') %} class="fa fa-sort-{{ direction }}"{% endif %}>
                                            {{ knp_pagination_sortable(workCategories, 'finalwork.text.sorting' | trans(), 'work_category.sorting') }}
                                        </th>
                                        <th{% if workCategories.isSorted('work_category.createdAt') %} class="fa fa-sort-{{ direction }}"{% endif %}>
                                            {{ knp_pagination_sortable(workCategories, 'finalwork.text.date_added' | trans(), 'work_category.createdAt') }}
                                        </th>
                                        <th style="width: 20%">
                                            {{ 'finalwork.text.options' | trans() }}
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for workCategory in workCategories %}
                                        <tr data-delete-row="work-category-{{ workCategory.id | hashids_encode }}">
                                            <td>
                                                {{ workCategory.name }}
                                            </td>
                                            <td>
                                                {{ workCategory.works | length }}
                                            </td>
                                            <td>
                                                {{ workCategory.sorting }}
                                            </td>
                                            <td>
                                                {{ workCategory.createdAt | date("d.m.Y H:i") }}
                                            </td>
                                            <td>
                                                <a data-toggle="modal"
                                                   data-target="#modalWindow"
                                                   class="btn btn-warning btn-xs"
                                                   href="{{ path('work_category_edit', { 'id': workCategory.id | hashids_encode }) }}">
                                                    <i class="fa fa-pencil"></i>
                                                    {{ 'finalwork.form.action.edit' | trans() }}
                                                </a>
                                                <a data-toggle="modal"
                                                   data-target="#task-delete-modal-{{ workCategory.id | hashids_encode }}"
                                                   class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash-o"></i>
                                                    {{ 'finalwork.form.action.delete' | trans() }}
                                                </a>
                                                <div class="modal fade bs-example-modal-sm"
                                                     tabindex="-1"
                                                     role="dialog"
                                                     id="task-delete-modal-{{ workCategory.id | hashids_encode }}"
                                                     aria-hidden="true">
                                                    <div class="modal-dialog modal-sm">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button"
                                                                        class="close"
                                                                        data-dismiss="modal"
                                                                        aria-label="Close">
                                                                    <span aria-hidden="true">Ã—</span>
                                                                </button>
                                                                <h4 class="modal-title">
                                                                    {{ 'finalwork.text.deleting' | trans() }}
                                                                    | {{ workCategory.name }}
                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h4>
                                                                    {{ 'finalwork.text.are_you_sure_delete' | trans() }}
                                                                    ?
                                                                </h4>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button"
                                                                        class="btn btn-default"
                                                                        data-dismiss="modal">
                                                                    {{ 'finalwork.form.action.close' | trans() }}
                                                                </button>
                                                                <button
                                                                        data-delete-target-url="{{ path('work_category_delete_ajax', { 'id': workCategory.id | hashids_encode }) }}"
                                                                        data-delete-target-row="work-category-{{ workCategory.id | hashids_encode }}"
                                                                        type="button"
                                                                        class="btn btn-danger delete-element">
                                                                    <i class="fa fa-refresh fa-spin hide"></i>
                                                                    <i class="fa fa-trash-o"></i>
                                                                    {{ 'finalwork.form.action.delete' | trans() }}
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            {% else %}
                                {{ 'finalwork.text.no_result' | trans() }}
                            {% endif %}

                        </div>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(workCategories) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script>
        $(document).ready(function () {
            initAjaxDeleteContent();
            $("table").tableFix();
        });
    </script>
{% endblock %}
